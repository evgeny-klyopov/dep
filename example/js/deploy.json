{
  "keep_releases": 10,
  "hosts": [
    {
      "host": "example.dev",
      "stage": "master",
      "user": "deployer",
      "port": 1777,
      "deploy_path": "/var/www/projects/example/master"
    }
  ],
  "local_object_path": ["dist"],
  "tasks_order": [
    "build",
    "deploy:check",
    "deploy:release",
    "local:create-archive",
    "local:send-archive",
    "deploy:extract-archive",
    "deploy:remove-dist",
    "deploy:symlink",
    "cleanup"
  ],
  "tasks" : {
    "local": [
      {
        "name": "build",
        "command": "npm run build:{{stage}}"
      }
    ],
    "remote": [
      {
        "name": "deploy:remove-dist",
        "command": "cd {{release_path}} && mv dist/* ./ && rm -rf dist"
      }
    ]
  }
}